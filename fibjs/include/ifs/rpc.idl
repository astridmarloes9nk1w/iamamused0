
/*! @brief 远程过程调用消息转换模块
 *
 * 使用方法：
 * @code
 * var rpc = require('rpc');
 * @endcode
 */
class rpc: module
{
	/*! @brief 生成一个 json-rpc 消息转换处理器
	 * @param hdlr 用以处理 rpc 的处理器
	 * @return 生成的消息转换处理器
	 */
	static Handler json(Handler hdlr);

	/*! @brief 生成一个 json-rpc 消息转换处理器
	 * @param hdlr javascript 消息处理器，详见 mq.jsHandler
	 * @return 生成的消息转换处理器
	 */
	static Handler json(Value hdlr);
};
