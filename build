#!/bin/bash

if [ $# -lt 1 ]; then
	echo ""
	echo "build [Release | Release32 | Debug | Debug32 | clean]"
	echo ""
	exit 0
fi

if [ $1 != 'Release' ] && [ $1 != 'Release32' ] && [ $1 != 'Debug' ] && [ $1 != 'Debug32' ] && [ $1 != 'clean' ]; then
	echo ""
	echo "build [Release | Release32 | Debug | Debug32 | clean]"
	echo ""
	exit 0
fi

#get cpu core count 
OS=$(uname)
CPU_CORE=1
case ${OS} in
	Darwin)
		CPU_CORE=$(sysctl hw.ncpu | awk '{print $2}')
		;;
	Linux)
		CPU_CORE=$(cat /proc/cpuinfo | grep processor | wc -l)
		;;
	Windows)
		CPU_CORE=$(echo $NUMBER_OF_PROCESSORS)
		;;
esac
echo "host machine has ${CPU_CORE} core"

# set build jobs with cpu core count * 2
BUILD_JOBS=`expr ${CPU_CORE} \* 2`

cd vender
BUILD_JOBS=${BUILD_JOBS} sh build $1
cd ..

cd fibjs
BUILD_JOBS=${BUILD_JOBS} sh build $1
cd ..

if [ $1 = 'clean' ]; then
	if [ -e "bin" ]; then
		rm -rf "bin"
	fi
fi
