
/*! @brief 全局对象，所有脚本均可以访问的基础对象*/
class global : module
{
	/*! @brief 二进制数据缓存对象，用于 io 读写的数据处理，参见 Buffer 对象。*/
	static Buffer new Buffer();

	/*! @brief 事件触发对象，可用于建立观察者模式，支持事件触发的对象均继承于此，参见 Event 对象。 */
	static Event new Event();

	/*! @brief 控制台访问对象*/
	static console console;

	/*! @brief 记录普通日志信息，与 console.log 等同
	 * @param fmt 格式化字符串
	 * @param ... 可选参数列表
	 */
	static print(String fmt, ...);

	/*! @brief 运行一个脚本
	 * @param fname 指定要运行的脚本路径
	 */
	static run(String fname);

	/*! @brief 定义一个模块，更多信息参阅 @ref module
	 * @param id 定义的模块名称
	 * @param deps 依赖模块列表
	 * @param factory 模块定义
	 */
	static define(String id, Array deps, Value factory);

	/*! @brief 加载一个模块并返回模块对象，更多信息参阅 @ref module
	 * @param id 指定要加载的模块名称
	 */
	static Value require(String id);

	/*! @brief 强制要求进行垃圾回收*/
	static GC();
};
